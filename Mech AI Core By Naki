@name AI Core By Naki
@inputs [Target]:entity
#@inputs Entity:entity
@outputs W Shift Mouse1 EyeAngles:angle
@persist RefreshRate Entity:entity WalkDistance StopDistance AimRadius

if(first()){
    
    Entity=entity()
    
    WalkDistance=1000
    StopDistance=250
    AimRadius=15
    
    RefreshRate=100
}

interval(RefreshRate)

Distance=round(Target:pos():distance(Entity:pos()))

if(Distance>WalkDistance+StopDistance){
    Shift=1
}else{
    Shift=0
}

if(Distance>StopDistance){
    W=1
}else{
    W=0
}

EyeAngles=(Entity:pos()-Target:pos()):toAngle()

if(Target:pos():distance(Entity:pos()+Entity:forward()*Distance)<AimRadius+(Distance/8)){
    Mouse1=1
}else{
    Mouse1=0
}
